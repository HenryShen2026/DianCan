<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cart_imageView_item_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/cart_textView_rc_item_qty"
            app:layout_constraintEnd_toStartOf="@+id/cart_textView_rc_item_qty"
            app:layout_constraintTop_toTopOf="@+id/cart_textView_rc_item_qty"
            app:srcCompat="@drawable/minus_box_48px" />

        <ImageView
            android:id="@+id/cart_imageView_item_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/cart_textView_rc_item_qty"
            app:layout_constraintEnd_toStartOf="@+id/textView17"
            app:layout_constraintTop_toTopOf="@+id/cart_textView_rc_item_qty"
            app:srcCompat="@drawable/add_box_48px" />

        <TextView
            android:id="@+id/cart_textView_rc_item_qty"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingTop="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cart_imageView_item_plus"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cart_textView_rc_item_foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="商品名稱_加購明細"
            android:textColor="#040404"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/cart_checkBox_id"
            app:layout_constraintStart_toEndOf="@+id/cart_checkBox_id"
            app:layout_constraintTop_toTopOf="@+id/cart_checkBox_id" />

        <TextView
            android:id="@+id/cart_textView_rc_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="100"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/cart_textView_rc_item_qty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cart_textView_rc_item_qty" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/cart_textView_rc_item_price"
            app:layout_constraintEnd_toStartOf="@+id/cart_textView_rc_item_price"
            app:layout_constraintTop_toTopOf="@+id/cart_textView_rc_item_price" />

        <CheckBox
            android:id="@+id/cart_checkBox_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cart_textView_rc_item_foodname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>